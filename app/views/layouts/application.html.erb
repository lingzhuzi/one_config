<!DOCTYPE html>
<html>
  <head>
    <title>OneConfig</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <h1>logo位</h1>
      <div class="row">
        <div class="col-md-2">
          <label>APP列表</label>
          <ul class="list-unstyled">
            <% App.all.each do |app| %>
              <li><%= link_to app.name, app_configs_path(app.id) %></li>
            <% end %>
            <li><%= link_to '添加APP', new_app_path %>
          </ul>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>

<%= form_with(url: login_path, method: 'post', local: true, class: 'form') do |form| %>
  <div class="form-group">
    <%= form.label :login, t('login_name') %>
    <%= form.text_field :login, id: :login, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password, t('password') %>
    <%= form.password_field :password, id: :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit t('login'), class: 'btn btn-primary' %>
  </div>
<% end %>
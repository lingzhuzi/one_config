<h2><%= t('.title', app: @app.name) %></h2>

<table class="table">
  <thead>
    <tr>
      <th><%= t 'app' %></th>
      <th><%= t 'env' %></th>
      <th><%= t 'filename' %></th>
      <th><%= t 'oprations' %></th>
    </tr>
  </thead>

  <tbody>
    <% @configs.each do |config| %>
      <tr>
        <td><%= config.app.name %></td>
        <td><%= config.env.name %></td>
        <td><%= config.name %></td>
        <td>
          <%= link_to t('show'), app_config_path(config.app, config) %>
          <%= link_to t('edit'), edit_app_config_path(config.app, config) %>
          <%= link_to t('destroy'), app_config_path(config.app, config), method: :delete, data: { confirm: t('delete_confirm') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新增配置', new_app_config_path %>
